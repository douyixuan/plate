{
  "name": "plate",
  "displayName": "Plate Markdown Editor",
  "description": "A powerful markdown editor for VSCode",
  "version": "0.1.0",
  "publisher": "yourPublisherName",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Markdown",
    "Editor"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "plate.newMarkdownFile",
        "title": "Plate: New Markdown File",
        "category": "Plate Markdown Editor"
      },
      {
        "command": "plate.openWithPlate",
        "title": "Plate: Open Markdown File",
        "category": "Plate Markdown Editor"
      }
    ],
    "keybindings": [
      {
        "command": "plate.newMarkdownFile",
        "key": "ctrl+alt+n",
        "mac": "cmd+option+n"
      },
      {
        "command": "plate.openWithPlate",
        "key": "ctrl+alt+o", 
        "mac": "cmd+option+o"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "plate.openWithPlate",
          "when": "resourceLangId == markdown",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "plate.openWithPlate",
          "when": "resourceLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "plate.markdownEditor",
        "displayName": "Plate Markdown Editor",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/react": "^18.2.45",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "slate": "^0.112.0",
    "slate-react": "^0.112.1"
  }
}
